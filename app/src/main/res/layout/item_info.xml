<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="@dimen/item_view">

    <ImageView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:id="@+id/info_header"
        android:src="@drawable/logo80" />
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/border"
        android:paddingRight="@dimen/item_view"
        android:layout_weight="1"
        android:orientation="vertical"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/royalblue"
            android:textSize="20sp"
            android:text="wander"
            android:id="@+id/info_username"/>

        <TextView
            android:id="@+id/info_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="wander"
            android:textColor="@color/black"
            android:textSize="18sp" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/info_create_time"
            android:text="wander"
            android:textColor="@color/secondary_text"
            android:textSize="16sp"
            />

    </LinearLayout>
    <ImageView
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:src="@drawable/logo80"
        android:scaleType="fitXY"
        android:id="@+id/info_pic"/>

</LinearLayout>