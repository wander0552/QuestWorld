<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="@dimen/border"
    android:layout_marginRight="@dimen/item_view"
    android:layout_marginLeft="@dimen/item_view"
    android:layout_marginBottom="@dimen/border"
    android:orientation="vertical">

    <TextView
        android:id="@+id/attr_content_dis"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/primary_text"
        android:layout_marginBottom="@dimen/border"
        android:textSize="15sp"
        />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/attr_recycler"
        android:layout_width="match_parent"
        android:visibility="gone"
        android:layout_height="100dp" />

    <TextView
        android:id="@+id/attr_content_create_time"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/secondary_text"
        android:layout_marginRight="@dimen/item_view"
        android:gravity="right"
        android:text="121545-41545"
        android:textSize="15sp"
        />
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="@dimen/item_view"
        android:layout_marginBottom="@dimen/item_view"
        android:background="@color/divider" />


</LinearLayout>